{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
        "@services/*": ["services/*"],
        "@routes/*": ["routes/*"],
        "@entities/*": ["entities/*"],
        "@repositories/*": ["repositories/*"],
        "@irepositories/*": ["irepositories/*"],
        "@dtos/*": ["dtos/*"],
        "@apis/*": ["apis/*"],
        "@config/*": ["config/*"],
        "@shared/*": ["shared/*"],
        "@crons/*": ["crons/*"],
        "@errors/*": ["errors/*"],
        "@constants/*": ["constants/*"],
        "@providers/*": ["providers/*"],
        "@enum/*": ["enum/*"]
    }
  }
}
